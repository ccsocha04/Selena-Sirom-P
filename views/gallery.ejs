<section id="gallery" class="section-bg-color">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1 class="section-title">
                    <%= gallery %>
                </h1>
            </div>
        </div>
    </div>

    <div class="gallery-wrapper">
        <div class="gallery-left"><i class="fas fa-chevron-left"></i></div>
        <div class="gallery-right"><i class="fas fa-chevron-right"></i></div>

        <div class="gallery-scroller">
            <ul>
                <% 
                let ulGallery1 = galleries.filter(gallery => gallery.id % 2 === 1) 
                ulGallery1.forEach( gallery => { %>
                    <li>
                        <div class="hover-info">
                            <a class="btn btn-light btn-sm only-icon"
                                href="<%= gallery.image %>"
                                data-lightbox="WeddingPhotos" title="Wedding Photos">
                                <i class="fa fa-link"></i>
                            </a>
                        </div>
                        <img src="<%= gallery.image_thumbnail %>" alt="<%= gallery.id %>" />
                    </li>
                <% } ) %>
            </ul>

            <ul>
                <% 
                let ulGallery2 = galleries.filter(gallery => gallery.id % 2 === 0) 
                ulGallery2.forEach( gallery => { %>
                    <li>
                        <div class="hover-info">
                            <a class="btn btn-light btn-sm only-icon"
                                href="<%= gallery.image %>"
                                data-lightbox="WeddingPhotos" title="Wedding Photos">
                                <i class="fa fa-link"></i>
                            </a>
                        </div>
                        <img src="<%= gallery.image_thumbnail %>" alt="<%= gallery.id %>" />
                    </li>
                <% } ) %>
            </ul>
        </div>
    </div>
</section>