<section id="location">
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <h2 class="section-title"><%= location %></h2>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-lg-12 col-xl-10 offset-xl-1">

          <div class="map-info-container">
            <div class="info-wrapper" data-animation-direction="from-bottom" data-animation-delay="100">
              <div class="location-info">
                <div class="neela-style">
                  <h4 class="has-icon"><i class="icon-big-church"></i><%= location_details.ceremony %><small><%= location_details.ceremony_hour %></small></h4>
                  <div class="info-map-divider"></div>
                  <h4 class="has-icon"><i class="icon-photo-camera"></i><%= location_details.photobooth %><small><%= location_details.photobooth_hour %></small></h4>
                  <div class="info-map-divider"></div>
                  <h4 class="has-icon"><i class="icon-champagne-glasses"></i><%= location_details.reception %><small><%= location_details.reception_hour %></small></h4>

                </div>
              </div>
            </div>

            <div class="map-wrapper" data-animation-direction="fade" data-animation-delay="100">
              <div id="map_canvas" class="gmap"></div>

              <div class="map_pins">
                <ul class="pins">
                  <li><i class="fas fa-bell"></i>Ceremonia</li>
                  <li><i class="fas fa-glass-cheers"></i>Recepci√≥n</li>
                </ul>
              </div>
            </div>
          </div>

          <div class="center">
            <a href="#rsvp" class="btn btn-primary scrollto">RSVP</a>
          </div>
        </div>
      </div>
    </div>
  </section>